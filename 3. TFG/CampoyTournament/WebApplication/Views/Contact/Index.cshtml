@model WebApplication.Models.Contact.ContactViewModel
@using WebApplication.Managers;
@{
    ViewBag.Title = "Contacto";
}
<div class="panel panel-default widget">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-envelope"></span> @ViewBag.Title
        </h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-xs-10 col-md-11">
                        @using (Html.BeginForm("Index", "Contact", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <h3>
                                    @ViewBag.Title
                                    <small>Introduzca su mensaje:</small>
                                </h3>
                                <hr />
                                <ul class="list-group">
                                    @Html.ValidationSummary()
                                </ul>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.Email, new { disabled = "disabled", @class = "form-control", placeholder = @User.Identity.Name, required = "true", type = "email" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Message, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Mensaje", required = "true", type = "text" })
                                    </div>
                                </div>
                                <hr />
                                <button id="buttonSend" type="submit" class="btn btn-primary">Enviar</button>
                                @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
                            </fieldset>
                        }
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

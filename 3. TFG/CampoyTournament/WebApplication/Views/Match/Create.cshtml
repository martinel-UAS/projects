@model WebApplication.Models.Match.MatchViewModel
@using WebApplication.Controllers
<script type="text/javascript">
    $(document).ready(function () {     //Will trigger when the document is ready
        $("#Date").datepicker({
            dateFormat: "dd-MM-y"
        });
    });
</script>
@{
    ViewBag.Title = "Nuevo Evento";
}
<ul class="list-group">
    @Html.ValidationSummary()
</ul>
<div class="panel panel-default widget">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-calendar"></span>@ViewBag.Title
        </h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("Create", "Match", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.KindOfEvent, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.DropDownList("KindOfEvent", Model.KindOfEvents, new { @class = "form-control", required = "true" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FieldName, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.DropDownList("FieldId", Model.AvailableFields, "-- Seleccione --", new { @class = "form-control", required = "true" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Date, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(model => model.Date, new { @class = "form-control", required = "true", @Value = Model.Date.ToString("dd-MMM-yy") })
                                    </div>
                                </div>
                                <button id="buttonSend" type="submit" class="btn btn-primary">Aceptar</button>
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                            </fieldset>
                        }
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

@model WebApplication.Models.Match.MatchViewModel
@using WebApplication.Managers;
@{
    ViewBag.Title = "Detalles";
}

<div class="container">
    <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">

                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-eye-open"></span> @ViewBag.Title
                </h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-xs-2 col-md-1">
                                <img src="~/Content/images/site/match.jpg" class="img-circle img-responsive" alt="" />
                            </div>
                            <div class="col-xs-10 col-md-11">
                                <div>
                                    <div class="mic-info">
                                        <strong>@Html.DisplayNameFor(model => model.KindOfEvent): </strong>
                                        @Html.DisplayFor(model => model.KindOfEvent)
                                    </div>
                                    <div class="mic-info">
                                        <strong>@Html.DisplayNameFor(model => model.FieldName): </strong>
                                        @Html.DisplayFor(model => model.FieldName)
                                    </div>
                                    <div class="mic-info">
                                        <strong>@Html.DisplayNameFor(model => model.Date): </strong>
                                        @Html.DisplayFor(model => model.Date)
                                    </div>                                  
                                </div>                               
                                <hr />
                                 @if (UserManager.IsInRole(UserManager.User,"Admin Player"))
                                {
                                    <div class="action">
                                        <a href="@Url.Action("Edit", new { id = Model.Id })">
                                            <button type="button" class="btn btn-primary btn-xs" title="Editar">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </button>
                                        </a>
                                        <a href="@Url.Action("Index")">
                                            <button type="button" class="btn btn-default btn-xs" title="Volver">
                                                <span class="glyphicon glyphicon-arrow-left"></span>
                                            </button>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="action">
                                        <a href="@Url.Action("Index")">
                                            <button type="button" class="btn btn-default btn-xs" title="Volver">
                                                <span class="glyphicon glyphicon-arrow-left"></span>
                                            </button>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
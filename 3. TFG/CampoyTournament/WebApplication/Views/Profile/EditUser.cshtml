@model WebApplication.Models.Profile.UserProfileViewModel
@{
    ViewBag.Title = "Editar Perfil";
}
<div class="panel panel-default widget">
    <div class="panel-heading">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-user"></span> @ViewBag.Title
        </h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-xs-10 col-md-11">
                        @using (Html.BeginForm("EditUser", "Profile", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <h3>
                                    Datos de usuario
                                    <small>Modifique los datos:</small>
                                </h3>
                                <hr />
                                <ul class="list-group">
                                    @Html.ValidationSummary()
                                </ul>                                
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nombre", required = "true", type = "text" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Surname, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Appelido", required = "true", type = "text" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo electrónico", required = "true", type = "email" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Password", required = "true", type = "password" })
                                    </div>
                                </div>
                                <hr />
                                <button id="buttonSend" type="submit" class="btn btn-primary">Aceptar</button>
                                @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
                            </fieldset>
                        }
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

@model WebApplication.Models.Field.FieldViewModel
@{
    ViewBag.Title = "Editar Campo";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <ul class="list-group">
        @Html.ValidationSummary()
    </ul>

    <div class="panel panel-default widget">
        <div class="panel-heading">
            <h3 class="panel-title">
                <span class="glyphicon glyphicon-pencil"></span> @ViewBag.Title
            </h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-3">
                                <fieldset>
                                    <legend>Modifique los datos</legend>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name)
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Nombre del campo", required = "true", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Address)
                                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Dirección", required = "true", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.City)
                                        @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "Ciudad", required = "true", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Province)
                                        @Html.TextBoxFor(model => model.Province, new { @class = "form-control", placeholder = "Província", required = "true", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Web)
                                        @Html.TextBoxFor(model => model.Web, new { @class = "form-control", placeholder = "Página Web", required = "true", type = "text" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email)
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Correo electrónico", required = "true", type = "email" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Phone)
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Teléfono", required = "true", type = "text" })
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="col-md-8">
                                <p style="text-align:center">Complete los hoyos</p>
                                <div class="col-md-6">
                                    <h5 style="text-align:center"><strong>Primera vuelta:</strong></h5>
                                    <div class="row">
                                        <div class="col-xs-2">
                                        </div>
                                        <div class="col-xs-4">
                                            <h5><strong>Handicap:</strong></h5>
                                        </div>
                                        <div class="col-xs-4">
                                            <h5><strong>Distancia:</strong></h5>
                                        </div>
                                    </div>
                                    @for (var i = 0; i < 9; i++)
                                    {
                                        @Html.HiddenFor(model => model.Holes[i].HoleId)
                                        <div class="row">
                                            <div class="col-xs-2">
                                                <h5><strong>H@(i + 1):</strong></h5>
                                            </div>
                                            <div class="col-xs-4">
                                                @Html.DropDownListFor(model => model.Holes[i].Handicap, Model.Holes[i].Handicaps, new { @class = "form-control", placeholder = "Dist.", required = "true", style="font-size: small" })
                                            </div>
                                            <div class="col-xs-4">
                                                @Html.TextBoxFor(model => model.Holes[i].Distance, new { @class = "form-control", required = "true", type = "number", min = 0 })
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div class="col-md-6">
                                    <h5 style="text-align:center"><strong>Segunda vuelta:</strong></h5>
                                    <div class="row">
                                        <div class="col-xs-2">
                                        </div>
                                        <div class="col-xs-4">
                                            <h5><strong>Handicap:</strong></h5>
                                        </div>
                                        <div class="col-xs-4">
                                            <h5><strong>Distancia:</strong></h5>
                                        </div>
                                    </div>
                                    @for (var i = 9; i < 18; i++)
                                    {
                                        @Html.HiddenFor(model => model.Holes[i].HoleId)
                                        <div class="row">
                                            <div class="col-xs-2">
                                                <h5><strong>H@(i + 1):</strong></h5>
                                            </div>
                                            <div class="col-xs-4">
                                                @Html.DropDownListFor(model => model.Holes[i].Handicap, Model.Holes[i].Handicaps, new { @class = "form-control", placeholder = "Dist.", required = "true", style="font-size: small" })
                                            </div>
                                            <div class="col-xs-4">
                                                @Html.TextBoxFor(model => model.Holes[i].Distance, new { @class = "form-control", required = "true", type = "number", min = 0 })
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <button id="buttonSend" type="submit" class="btn btn-primary">Aceptar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                </li>
            </ul>
        </div>
    </div>
}

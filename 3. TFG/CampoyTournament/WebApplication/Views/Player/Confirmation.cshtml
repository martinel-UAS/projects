@model Int32
@{
    ViewBag.Title = "Confirmación";
}
@using (Html.BeginForm("SendEmail", "Player", FormMethod.Post))
{
    @Html.Hidden("id")
    @Html.AntiForgeryToken()
    <h2>Jugador creado.</h2>
    <h4>Desea enviar un mensaje para informar al usuario?</h4>
    <div class="action">

        <button id="buttonSend" type="submit" class="btn btn-primary">Enviar</button>
        @Html.ActionLink("Descartar", "Index", "Player", null, new { @class = "btn btn-default" })
    </div>
}